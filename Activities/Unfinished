<script>
    /* STATUS ALCHEMY 
       Change 'mosqueState' to "live", "soon", or "offline" 
    */
    const mosqueState = "live";
    const currentClass = "Prophetic History";
    const zoomLink = "#"; // Replace with your actual Zoom URL

    function updateStatus() {
        const container = document.getElementById('mosque-status');
        const text = document.getElementById('status-text');

        if (mosqueState === "live") {
            container.className = "status-container status-live";
            text.innerHTML = `LIVE NOW: ${currentClass.toUpperCase()} â€” <a href="${zoomLink}" style="color:white; text-decoration:underline;">JOIN ZOOM</a>`;
        }
        else if (mosqueState === "soon") {
            container.className = "status-container status-soon";
            text.innerText = `STARTING SOON: ${currentClass.toUpperCase()}`;
        }
        else {
            container.className = "status-container status-offline";
            text.innerText = "THE MOSQUE IS CURRENTLY QUIET";
        }
    }
    updateStatus();
</script>